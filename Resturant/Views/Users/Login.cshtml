<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>
@{
    ViewData["Title"] = "login";
}
@{
    Layout = null;
}

<style>
    body {
        background-image: url("/images/background3.jpg");
        background-size: cover;
        background-repeat: no-repeat;
    }
</style>
<div class="login-container">
<form asp-action="Login">
    <div class="form-group">
        <label class="control-label">Name</label>
        <input name="name" class="form-control" />
    </div>
    <div class="form-group">
            <label for="password" class="control-label" style="margin-top:20px;">Password</label>
        <input name="password" type="password" class="form-control"/> <br />
    </div>
        <input type="submit" value="Login" class="btn btn-primary" style="margin-top:20px;" />

    <p style="color:red"> @ViewData["message"]</p>
</form>
<a asp-action="Create">Create Account ?</a>
</div>


